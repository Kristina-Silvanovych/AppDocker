@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AppDocker.Models.AddUserBindingModel

<!DOCTYPE>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</head>

<body>
    <div style="display: flex;justify-content: center">
        <h3>Add user</h3>
    </div>
    <p>
        <a class="btn btn-primary" asp-controller="Home" asp-action="UsersList" role="button" style="min-width:100px">Users List</a>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index" role="button" style="min-width:100px">Home</a>
    </p>
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <div style="display: flex flex-direction: column; align-items: start">
            <form asp-controller="Home" asp-action="AddUser" method="post"
                  style="gap: 5px; display: flex; flex-direction: column; min-width: 50vw; width: 100%;">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
                <br />
                <label asp-for="LastName"></label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
                <br />
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
                <br />
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit">Add</button>
            </form>
        </div>
    </div>
</body>
</html>

